{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "importHelpers": true,
    "lib": ["es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "preserveSymlinks": true,
    "strict": true,
    "target": "es6",
    "types": ["react", "react-native"],
    "baseUrl": ".",
    "paths": {
      "react-native-awesome-image": ["lib/index.tsx"]
    }
  },
  "include": [
    "lib/*",
    "samples/SampleApp/*"
  ]
}
